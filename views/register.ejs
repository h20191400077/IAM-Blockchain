<h1>Register</h1>
<body style="margin-left:750px;"></body>

<form action="/register" method="POST">
  <br>
  <div>
    <i class="fas fa-user"></i>
    <input type="text" id="name" name="name" placeholder="Name" required>
  </div>
  <br>
  <div>
    <i class="fas fa-user"></i>
    <input type="text" id="userid" name="userid" placeholder="EnrollmentID" required>
  </div>
  <br>
  <div>
    <i class="fas fa-user"></i>
    <input type="text" id="email" name="email" placeholder="Email" required>
  </div>
  <br>
  <div>
    <i class="fas fa-user"></i>
    <input type="text" id="dob" name="dob" placeholder="DOB" required>
  </div>
  <br>
  <div>
    <i class="fas fa-user"></i>
    <label for="course">Choose a course:</label>
    <select id="course" name="course">
    <option value="BE">BE</option>
    <option value="ME">ME</option>
    <option value="PHD">PHD</option>
  </select>
  </div>
  <br>
  <div>
    <i class="fas fa-user"></i>
    <input type="text" id="Address" name="address" placeholder="Address" required>
  </div>
  <br>
  <div>
    <i class="fas fa-user"></i>
    <input type="text" id="cgpa" name="cgpa" placeholder="CGPA" required>
  </div>
  <br>
  <div>
    <i class="fas fa-lock"></i>
    <input type="password" id="password" name="password" placeholder="Password" required>
  </div>
  <br>
  <button type="submit">Register</button>
</form>
<link href="/style.css" rel="stylesheet" type="text/css">
<a href="/login">Login</a>



